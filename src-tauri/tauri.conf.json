{
  "build": {
    "distDir": "../frontend/out",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build && npm run export"
  },
  "package": {
    "productName": "warehouse_simulation",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "warehouse_sim",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "appimage", "msi"],
      "identifier": "com.warehouse.simulation",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
